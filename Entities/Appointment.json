{
  "name": "Appointment",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Client's full name"
    },
    "email": {
      "type": "string",
      "format": "email",
      "description": "Client's email address"
    },
    "phone": {
      "type": "string",
      "description": "Client's phone number"
    },
    "service": {
      "type": "string",
      "enum": [
        "botox",
        "dermal_fillers",
        "chemical_peels",
        "laser_treatment",
        "microneedling",
        "consultation"
      ],
      "description": "Requested service"
    },
    "preferred_date": {
      "type": "string",
      "format": "date",
      "description": "Preferred appointment date"
    },
    "message": {
      "type": "string",
      "description": "Additional message or concerns"
    },
    "status": {
      "type": "string",
      "enum": [
        "pending",
        "confirmed",
        "completed",
        "cancelled"
      ],
      "default": "pending",
      "description": "Appointment status"
    }
  },
  "required": [
    "name",
    "email",
    "phone",
    "service"
  ]
}